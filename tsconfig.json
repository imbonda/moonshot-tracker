{
    "compilerOptions": {
        "target": "ES2020",
        "module": "commonjs",
        "rootDir": ".",
        "outDir": "./build",
        "declaration": true,
        "strict": true,
        "resolveJsonModule": true,
        "esModuleInterop": true,
        "experimentalDecorators": true,
        "emitDecoratorMetadata": true,
    },
    "include": [
        "ecosystem.config.js",
        "src/**/*.ts",
        "src/**/*.d.ts"
    ],
    "exclude": [
        "build",
        "node_modules"
    ]
}
