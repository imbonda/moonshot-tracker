    "version": "0.2.0",
    "configurations": [
        {
            "type": "node",
            "request": "launch",
            "name": "Monitor ETH",
            "cwd": "${workspaceRoot}",
            "skipFiles": [
                "<node_internals>/**"
            ],
            "program": "./src/main.ts",
            "runtimeArgs": [
                // Tell V8 to compile ahead of time so breakpoints work correctly.
                "--nolazy",
                // Ensure ts-node is loaded before trying to execute.
                "--require",
                "ts-node/register",
            ],
            "args": [
                "-s",
                "monitor"
            ],
            "env": {
                "NODE_ENV": "dev",
                "CHAIN_ID": 1,
            },
            "sourceMaps": true,
            "outputCapture": "std"
        },

        {
            "type": "node",
            "request": "launch",
            "name": "Monitor BSC",
            "cwd": "${workspaceRoot}",
            "skipFiles": [
