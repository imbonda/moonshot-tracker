        {
            "type": "node",
            "request": "launch",
            "name": "Run File",
            "cwd": "${workspaceRoot}",
            "skipFiles": [
                "<node_internals>/**"
            ],
            "program": "${file}",
            "runtimeArgs": [
                // Tell V8 to compile ahead of time so breakpoints work correctly.
                "--nolazy",
                // Ensure ts-node is loaded before trying to execute.
                "--require",
                "ts-node/register"
            ],
            "env": {
                "NODE_ENV": "dev"
            },
            "outputCapture": "std",
        },
    ]
}
